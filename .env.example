# Environment Variables
# Copy this file to .env.local and fill in your values

# Gemini 3 Flash API Key for LLM-powered chunking
# Get your API key at: https://ai.google.dev/
# Pricing (2026): $0.50/1M input tokens, $3/1M output tokens
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API Key (for future features)
NEXT_PUBLIC_OPENAI_API_KEY=

# Optional: Anthropic API Key (for future features)
NEXT_PUBLIC_ANTHROPIC_API_KEY=

# Optional: Neo4j Database (for production)
NEO4J_URI=
NEO4J_USER=
NEO4J_PASSWORD=

# Optional: Analytics
NEXT_PUBLIC_ANALYTICS_ID=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Knowledge Graph System"
NEXT_PUBLIC_APP_VERSION=0.1.0